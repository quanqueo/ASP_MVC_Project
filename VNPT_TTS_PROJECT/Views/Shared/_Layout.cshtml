<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <title>@ViewBag.Title</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/Assets/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/Assets/assets/css/templatemo-woox-travel.css">
    <link rel="stylesheet" href="~/Assets/assets/css/owl.css">
    <link rel="stylesheet" href="~/Assets/assets/css/animate.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
    <!--

    TemplateMo 580 Woox Travel

    https://templatemo.com/tm-580-woox-travel

    -->
</head>

<body>

    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="index.html" class="logo">
                            <img src="~/Assets/assets/images/logo.png" alt="">
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li><a href="~/Home/Index" class="@ViewBag.ActiveHome">Home</a></li>
                            <li><a href="~/Home/About" class="@ViewBag.ActiveAbout">About</a></li>
                            <li><a href="~/Home/Deals" class="@ViewBag.ActiveDeals">Deals</a></li>
                            <li><a href="~/Home/Reservation" class="@ViewBag.ActiveReservation">Reservation</a></li>
                            <li><a href="~/Home/BookYours" class="@ViewBag.ActiveBookYours">
                                Book Yours (<strong>
                                @{
                                    if (HttpContext.Current.Session["username"] == null)
                                    { @Html.Raw("Login") }
                                    else
                                    {@HttpContext.Current.Session["username"] } 
                                }</strong> )</a></li>
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->
    @RenderBody()

    <div class="call-to-action">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <h2>Bạn đang tìm kiếm địa điểm du lịch ></h2>
                    <h4>Đăng ký ngay chỉ với một thao tác</h4>
                </div>
                <div class="col-lg-4">
                    <div class="border-button">
                        <a href="~/Home/Reservation">Đặt Lịch Ngay</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <p>
                        Copyright © 2022 <a href="#">TTS VNPT BN</a>. All rights reserved.
                    </p>
                </div>
            </div>
        </div>
    </footer>


    <!-- Scripts -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/Assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/Assets/vendor/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/Assets/assets/js/isotope.min.js"></script>
    <script src="~/Assets/assets/js/owl-carousel.js"></script>
    <script src="~/Assets/assets/js/wow.js"></script>
    <script src="~/Assets/assets/js/tabs.js"></script>
    <script src="~/Assets/assets/js/popup.js"></script>
    <script src="~/Assets/assets/js/custom.js"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>


